{
  "manifest_version": 2,
  "name": "Window Tiler",
  "version": "0.51",
  "description": "Tile your windows with a single click.",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Click to tile your windows",
    "default_icon": "icon_19.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "32": "icon_32.png",
    "48": "icon_48.png",
    "72": "icon_72.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "system.display",
    "tabs"
  ]
  
}
